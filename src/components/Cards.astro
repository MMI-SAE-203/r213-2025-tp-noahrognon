---
const { nomMaison, adresse, nbChambres, nbSdb, prix, surface, imageUrl } =
    Astro.props;
---

<ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mt-8">
    <li class="bg-white shadow-md rounded-lg overflow-hidden hover:shadow-xl transition-all duration-300 ease-in-out">
        <h2 class="text-2xl font-bold text-indigo-800 p-4">{nomMaison}</h2>
        <img
            src={imageUrl}
            alt="image de l'annonce"
            class="w-full h-48 object-cover mt-4"
        />
        <div class="p-4">
            <p class="text-gray-600 mt-2">{adresse}</p>
            <p class="text-gray-600 mt-2">{nbChambres} chambres</p>
            <p class="text-gray-600 mt-2">{nbSdb} salles de bain</p>
            <p class="text-gray-800 font-semibold mt-2">{prix} €/ par mois</p>
            <p class="text-gray-600 mt-2">{surface} m²</p>
            <div
                x-data="{ favori: false }"
                :class="{ 'bg-blue-200': favori }"
                class="p-4 border rounded mt-4"
            >
                <button
                    @click="favori = !favori"
                    class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
                >
                    <span x-show="!favori">Ajouter aux favoris</span>
                    <span x-show="favori">Retirer des favoris</span>
                </button>
            </div>
        </div>
    </li>
</ul>

