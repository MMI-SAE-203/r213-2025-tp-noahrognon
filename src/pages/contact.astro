---
import Base from "../Layout/Base.astro";
---


<Base titre = "Contact">
    <h1 class="text-center text-3xl text-indigo-800 font-bold">Contact</h1>
    <p class="text-center text-xl mt-8 text-indigo-800 font-semibold">Contactez-nous</p>
    <form class="flex flex-col items-center mt-8">
        <label for="nom" class="text-indigo-800 font-semibold">Nom</label>
        <input type="text" id="nom" name="nom" class="border border-indigo-800 rounded-lg p-2 w-80 mt-2" />
        <label for="email" class="text-indigo-800 font-semibold mt-4">Email</label>
        <input type="email" id="email" name="email" class="border border-indigo-800 rounded-lg p-2 w-80 mt-2" />
        <label for="message" class="text-indigo-800 font-semibold mt-4">Message</label>
        <textarea id="message" name="message" class="border border-indigo-800 rounded-lg p-2 w-80 h-32 mt-2"></textarea>
        <button type="submit" class="bg-indigo-800 text-indingo font-semibold rounded-lg p-2 mt-4">Envoyer</button>
    </form>
</Base>